<zk>
<window id="windowImmigrationDialog" title="Form Employee"
		border="normal" width="60%" position="center,center" closable="true"
		maximizable="true" action="show: slideDown; hide: slideUp"
		mode="modal" apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('org.app.portofolio.webui.hr.transaction.employee.ImmigrationDialog')">
	<!-- <window id="windowImmigrationDialog" title="new page title" border="normal" apply="org.zkoss.bind.BindComposer" 
		viewModel="@id('vm') @init('org.app.portofolio.webui.hr.employee.ImmigrationDialog')" mode="modal" 
		width="550px" position="center,center" closable="true" maximizable="true"
		validationMessages="@id('vmsgs')"> -->
		<borderlayout height="500px">
			<!-- Function CRUD -->
			<north>
				<toolbar>
					<button image="/images/icons/btn_save.gif"
						label="Save" onClick="@command('doSave')" />
				</toolbar>
			</north>
			<center>
				<groupbox mold="3d">
					<caption label="Immigration dialog" />
					<grid>
						<rows>
							<row>
								<label
									value="Document" />
								<radiogroup selectedItem="@bind(vm.trsEmployeeImmigration.document)" >
										<radio id="radioPassort" label="Passport" value="passport" />
										<radio id="radioVisa" label="Visa" value="visa"/>
								</radiogroup>
							</row>
							<row>
								<label
									value="Number" />
								<textbox value="@bind(vm.trsEmployeeImmigration.number)" />
							</row>
							<row>
								<label
									value="Issued Date" />
								<datebox value="@bind(vm.trsEmployeeImmigration.issuedDate)" />
							</row>
							<row>
								<label value="Expiry Date"/>
								<datebox value="@bind(vm.trsEmployeeImmigration.expiredDate)" />
							</row>
							<row>
								<label value="Eligible Status"/>
								<textbox value="@bind(vm.trsEmployeeImmigration.eligibleStatus)"/>
							</row>
							<row>
								<label value="Issued by"/>
								<bandbox>
								</bandbox>
							</row>
							<row>
								<label value="Eligible Review Date"/>
								<datebox value="@bind(vm.trsEmployeeImmigration.eligibleReview)" />
							</row>
							<row>
								<label value="Comment"/>
								<textbox value="@bind(vm.trsEmployeeImmigration.comment)" multiline="true" rows="3"/>
							</row>
						</rows>
					</grid>
				</groupbox>
			</center>
			<south />
		</borderlayout>
	</window>
</zk>